<!-- Vidal/mainBundle/Resources/config/admin.xml -->
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="sonata.admin.document" class="Vidal\MainBundle\Admin\DocumentAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Основной контент" label="Документы"/>
            <argument />
            <argument>Vidal\MainBundle\Entity\Document</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <argument />
            <call method="setTranslationDomain">
                <argument>VidalMainBundle</argument>
            </call>
        </service>
        <service id="sonata.admin.product" class="Vidal\MainBundle\Admin\ProductAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Основной контент" label="Продукты"/>
            <argument />
            <argument>Vidal\MainBundle\Entity\Product</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <argument />
            <call method="setTranslationDomain">
                <argument>VidalMainBundle</argument>
            </call>
        </service>

    </services>
</container>