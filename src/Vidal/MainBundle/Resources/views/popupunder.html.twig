{% if not app.user %}
	<div id="popupvidal" class="popup">
		<img id="closepopupvidal" src="{{ asset('bundles/vidalmain/images/cross_red_big.png') }}"/>
		<a href="http://www.vidal.ru/shkola-gastrita" target="_blank">
			<img src="{{ asset('bundles/vidalmain/images/banner-gastrit2.jpg') }}"/>
		</a>
	</div>

	<script type="text/javascript">
		$(document).ready(function() {
			var popup = getCookie('popupvidal');

			if (popup == undefined) {
				setCookie('popupvidal', '1', {expires: 28800});
				$('.gray').fadeIn();
				$('#popupvidal').fadeIn();
			}

			$('#closepopupvidal').click(function() {
				$('.gray').fadeOut();
				$('#popupvidal').fadeOut();
			});
		});
	</script>
{% endif %}