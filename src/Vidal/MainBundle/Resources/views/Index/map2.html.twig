{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>КАРТА АПТЕК</h1>
{% endblock %}


{% block content %}
	<div class="anons">Выберите ближайшую к Вам аптеку</div>

	<div class="map" id="map"></div>

	<div class="iption">
		<span class="choose">Выбрать область/край: </span>
		<select class="select">
			{% for r in regions %}
				<option value="{{ r.id }}" {{ r.id == regionId ? 'selected="selected"' : '' }}>{{ r.title }}</option>
			{% endfor %}
		</select>
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		#map {
			margin-top: 20px;
			width:      520px;
			height:     400px;
			border:     1px solid #ccc;
		}
		.iption {
			margin-top: 8px;
		}
		.choose {
			color:       #2e3f51;
			font-weight: bold;
			font-size:   15px;
		}
	</style>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script src="http://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
	<script src="{{ asset('bundles/vidalmain/javascripts/maps.js') }}"></script>
{% endblock %}