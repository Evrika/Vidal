{% if pagination is not empty %}
	<div class="pharm-articles">
		{% for article in pagination %}
			<div class="pharm-article">
				{% if article.company %}
					<div class="article-company">
						<a href="{{ path('pharma_company', {'id':article.company.id}) }}">
							{{ article.company.title|raw }}
						</a>
					</div>
				{% endif %}

				{% if isAdmin %}
					<a class="admin-edit fade" target="_blank"
					   href="{{ path('admin_vidal_drug_pharmarticle_edit', {'id':article.id}) }}">
						<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
					</a>
				{% endif %}

				<div class="article-text text">
					{{ article.text|raw }}
				</div>

				<div class="article-footer">
					{{ article.created|date('d.m.Y') }}
					<div class="article-more">
						<a href="{{ path('pharma_company', {'id':article.company.id}) }}">
							Другие новости этой компании
						</a>
					</div>
				</div>

				{% include 'VidalMainBundle:Index:render_tags.html.twig' with {'object':article} %}
			</div>
			<hr/>
		{% endfor %}
	</div>

	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endif %}