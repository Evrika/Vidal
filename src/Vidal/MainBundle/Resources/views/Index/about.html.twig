{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>О КОМПАНИИ</h1>
{% endblock %}


{% block content %}
	<div class="rubriques">
		{% if items|length %}
			{% set perColumn = 2 %}

			{% for about in items %}
				{% if loop.index % perColumn == 1 %}
					<div>
					<ul class="ul">
				{% endif %}

				<li>
					<a href="{{ path('services_item', {'url':about.url}) }}">{{ about.title }}</a>
					{% if isAdmin %}
						<a class="admin-edit fade" target="_blank"
						   href="{{ path('admin_vidal_main_about_edit', {'id':about.id}) }}">
							<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
						</a>
					{% endif %}
				</li>

				{% if loop.index % perColumn == 0 %}
					</ul>
					</div>
				{% endif %}

			{% endfor %}
		{% endif %}
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{ asset('bundles/vidalmain/stylesheets/article.css') }}"/>
{% endblock %}