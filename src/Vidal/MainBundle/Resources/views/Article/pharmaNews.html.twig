{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>НОВОСТИ ФАРМАЦЕВТИЧЕСКИХ КОМПАНИЙ</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('vracham') }}">Информация для специалистов</a>
	</div>
{% endblock %}


{% block content %}
	<div class="pharm-articles">
		{% for article in pagination %}
			<div class="article text">
				{% if article.company %}
					<div class="article-company">
						<a href="{{ path('pharma_company', {'id':article.company.id}) }}">
							{{ article.company.title|raw }}
						</a>
					</div>
				{% endif %}

				{% if isAdmin %}
					<a class="admin-edit fade" target="_blank"
					   href="{{ path('admin_vidal_drug_pharmarticle_edit', {'id':article.id}) }}">
						<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
					</a>
				{% endif %}

				<div class="article-text">
					{{ article.text|raw }}
				</div>

				<div class="article-footer">
					{{ article.created|date('d.m.Y') }}
					<div class="article-more">
						<a href="{{ path('pharma_company', {'id':article.company.id}) }}">
							Другие новости этой компании
						</a>
					</div>
				</div>
			</div>
			<hr/>
		{% endfor %}
	</div>

	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.pharm-articles {
			max-width: 530px;
		}
		.pharm-articles img {
			margin-right: 15px;
		}
		.pharm-articles > div {
			position: relative;
		}
		.pharm-articles .article {
			font-size: 14px;
			overflow:  hidden;
		}
		.pharm-articles .article p:last-child {
			margin-bottom: 0;
		}
		.pharm-articles .article-footer {
			font-size:     14px;
			text-align:    right;
			margin-bottom: 15px;
			color:         #777;
		}
		.article-company {
			background: #f5f5f5;
			padding:    4px 5px 5px;
		}
		.article-company a {
			color:       #2f4053 !important;
			font-weight: bold;
		}
	</style>
{% endblock %}