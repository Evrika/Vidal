{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>ИНФОРМАЦИЯ ДЛЯ СПЕЦИАЛИСТОВ</h1>
{% endblock %}


{% block content %}
	{% if subs is not empty %}
		<div class="rubriques">

			{% set perColumn = subs|length // 2 %}

			{% if app.environment == 'dev' %}
				{% for sub in subs %}
					{% if loop.index % perColumn == 1 %}
						<div>
						<ul class="ul">
					{% endif %}

					<li>
						<a href="/app_dev.php{{ sub.url }}">
							{{ sub.name }}
							{# админам карандашик редактирования #}
							{% if isAdmin %}
								<a class="admin-edit fade" target="_blank"
								   href="{{ path('admin_vidal_drug_subdivision_edit', {'id':sub.id}) }}">
									<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
								</a>
							{% endif %}
						</a>
					</li>

					{% if loop.index % perColumn == 0 %}
						</ul>
						</div>
					{% endif %}
				{% endfor %}
			{% else %}
				{% for sub in subs %}
					{% if loop.index % perColumn == 1 %}
						<div>
						<ul class="ul">
					{% endif %}

					<li>
						<a href="{{ sub.url }}">
							{{ sub.name }}
							{# админам карандашик редактирования #}
							{% if isAdmin %}
								<a class="admin-edit fade" target="_blank"
								   href="{{ path('admin_vidal_drug_subdivision_edit', {'id':sub.id}) }}">
									<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
								</a>
							{% endif %}
						</a>
					</li>

					{% if loop.index % perColumn == 0 %}
						</ul>
						</div>
					{% endif %}
				{% endfor %}
			{% endif %}

		</div>
	{% endif %}

{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="{{ asset('bundles/vidalmain/stylesheets/article.css') }}"/>
{% endblock %}