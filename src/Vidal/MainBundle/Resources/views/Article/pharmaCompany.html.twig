{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>
		{% if isAdmin %}
			<a class="admin-edit fade" target="_blank"
			   href="{{ path('admin_vidal_drug_pharmcompany_edit', {'id':company.id}) }}">
				<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
			</a>
		{% endif %}

		{{ company.title|raw }}
	</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('vracham') }}">Информация для специалистов</a>
		<i></i>
		<a href="{{ path('pharma_news') }}">Новости фармацевтических компаний</a>
	</div>
{% endblock %}


{% block content %}
	<div class="pharm-articles">
		{% for article in pagination %}
			<div class="article text">
				{% if isAdmin %}
					<a class="admin-edit fade" target="_blank"
					   href="{{ path('admin_vidal_drug_pharmarticle_edit', {'id':article.id}) }}">
						<img src="{{ asset('bundles/vidalmain/images/edit.png') }}"/>
					</a>
				{% endif %}

				<div class="article-text">
					{{ article.text|raw }}
				</div>

				<div class="article-footer">
					{{ article.created|date('d.m.Y') }}
				</div>
			</div>
			<hr/>
		{% endfor %}
	</div>

	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.pharm-articles img {
			margin-right: 15px;
		}
		.pharm-articles > div {
			position: relative;
		}
	</style>
{% endblock %}