{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>{{ title }}</h1>
{% endblock %}


{% block content %}
	<div class="unsub">
		<img src="{{ asset('bundles/vidalmain/images/unsubscribe.jpg') }}"/>

		<div class="unsub-text">
			<p><span class="unsub-name">{{ user.firstName }}{{ user.surName|length ? ' ' ~ user.surName }}</span>,
				Вы отписались от рассылки новостей нашего портала.</p>

			<p>Возобновить подписку всегда можно в <a href="{{ path('profile') }}">своем профиле</a>.</p>
		</div>
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.unsub {
			margin:       30px 0 15px;
			padding-left: 8px;
			font-size:    14px;
			overflow:     hidden;
		}
		.unsub img {
			width:   120px;
		}
		.unsub-text {
			float:       left;
			margin-left: 30px;
		}
		.unsub-name {
			font-weight: bold;
			color:       #476173;
		}
	</style>
{% endblock %}