<br />
<div class="conditions">
    <h1 class="market-btn" style="cursor: pointer; text-decoration: underline; display: inline">Показать цены онлайн аптек </h1>
    <a class="submit btn-red market-btn" href="#market-block" style="float: right; font-weight: bold;">Где купить</a>
</div>
<div class="market-block" id="market-block" style="display: none">
    {#{{ dump(lists.eapteka) }}#}
    {% if lists.eapteka is defined %}
        <div class="market-title">Интернет аптека «Eapteka.ru»:</div>
        <table>
            {% for drug in lists.eapteka %}
                <tr>
                    <td class="market-organization">{{ drug.manufacturer }}</td>
                    <td>{{ drug.title }}</td>
                    <td class="market-price">{{ drug.price }}&nbsp;р.</td>
                    <td class="market-basket"><a href="{{ path('add_to_basket', { 'code' : drug.code , 'count' : 1 }) }}" data-id="100" data-group="eapteka">В корзину</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}

    {% if lists.piluli is defined %}
        <div class="market-title">Интернет аптека «Piluli.ru»:</div>
        <table>
            {% for drug in lists.piluli %}
                <tr>
                    <td class="market-organization">{{ drug.manufacturer }}</td>
                    <td>{{ drug.title }}</td>
                    <td class="market-price">{{ drug.price }}&nbsp;р.</td>
                    <td class="market-basket"><a href="{{ path('add_to_basket', { 'code' : drug.code , 'count' : 1 }) }}" data-id="100" data-group="eapteka">В корзину</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}

    {% if lists.zdravzona is defined %}
        <div class="market-title">Интернет аптека «Здравзона»:</div>
        <table>
            {% for drug in lists.zdravzona %}
                <tr>
                    <td class="market-organization">{{ drug.manufacturer }}</td>
                    <td>{{ drug.title }}</td>
                    <td class="market-price">{{ drug.price }}&nbsp;р.</td>
                    <td class="market-basket"><a href="{{ path('add_to_basket', { 'code' : drug.code , 'count' : 1 }) }}" data-id="100" data-group="eapteka">В корзину</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
</div>

<script>
    $(document).ready(function(){
       $('.market-btn').click(function(){
           if ( $('.market-block').css('display') == 'none' ){
                $('.market-block').fadeIn();
           }else{
               $('.market-block').fadeOut();
           }
       });
    });
</script>