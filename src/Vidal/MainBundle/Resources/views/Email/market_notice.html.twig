{% extends 'VidalMainBundle::minimal_layout.html.twig' %}

{% block body %}

    <table>
        <tr>
            <td>Фамилия:</td>
            <td>{{ order.getLastName }}</td>
        </tr>
        <tr>
            <td>Имя:</td>
            <td>{{ order.getFirstName }}</td>
        </tr>
        <tr>
            <td>Отчество:</td>
            <td>{{ order.getSurName }}</td>
        </tr>
        <tr>
            <td>Адрес:</td>
            <td>{{ order.getAdress }}</td>
        </tr>
