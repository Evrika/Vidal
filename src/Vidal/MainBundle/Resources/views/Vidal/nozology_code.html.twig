{% extends 'VidalMainBundle::vidal_layout.html.twig' %}


{% block vidal %}
	<h1>{{ nozology.Name|raw }}</h1>

	<div class="anons anons-head">
		Нозологический указатель по коду
		<span>{{ nozology.Code }}</span>
	</div>

	{# Препараты #}
	{% if products is defined and products is not empty %}
		<div class="block">
			<div class="block-head">Препараты нозологической группы</div>
			{% include 'VidalMainBundle:Vidal:render_products.html.twig' %}
		</div>
	{% else %}
		<div class="no-results">
			Извините, не найдено препаратов по нозологическому указателю
			<span>{{ nozology.Code }}</span>
		</div>
	{% endif %}

	{# Описания активных веществ #}
	{% if molecules is not empty %}
		<div class="block">
			<div class="block-head">Описания активных веществ под международным непатентованным наименованием</div>
			{% include 'VidalMainBundle:Vidal:render_molecules.html.twig' %}
		</div>
	{% endif %}

{% endblock %}