		{% endif %}
		{% if document.PhInfluence is not empty %}
			<div><a href="#influence">Фармакологическое действие</a></div>
		{% endif %}
		{% if document.PhKinetics is not empty %}
			<div><a href="#kinetics">Фармакокинетика</a></div>
		{% endif %}
		{% if document.Indication is not empty %}
			<div><a href="#indication">Показания</a></div>
		{% endif %}
		{% if document.Dosage is not empty %}
			<div><a href="#dosage">Режим дозирования</a></div>
		{% endif %}
		{% if document.SideEffects is not empty %}
			<div><a href="#special">Особые указания</a></div>
		{% endif %}
		{% if document.OverDosage is not empty %}
			<div><a href="#over_dosage">Передозировка</a></div>
