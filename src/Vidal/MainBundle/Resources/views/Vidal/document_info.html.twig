{# Клинико-фармакологическая группа #}
{% if document.ClPhGrDescription is not empty %}
	<div class="block" id="description">
		<span class="block-head">Клинико-фармакологическая группа: </span>
		<span class="block-content">
			<a href="{{ path('clphgroup', {'description':document.ClPhGrName}) }}"
			   class="no-underline">{{ document.ClPhGrDescription|raw }}</a>
		</span>
	</div>
{% endif %}

{# Фармако-терапевтическая группа ГосРеестра МинЗдрава РФ #}
{% if phthgroups is defined and phthgroups is not empty %}
	{% if phthgroups|length == 1 %}
		<div class="block" id="phthgroup">
			<span class="block-head">Фармако-терапевтическая группа ГосРеестра МинЗдрава РФ:</span>
			<span class="block-content">
				<a href="{{ path('phthgroup', {'id':phthgroups[0].id}) }}"
				   class="no-underline">{{ phthgroups[0].Name|capitalize }}</a>
			</span>
		</div>
	{% else %}
		<div class="block">
			<div class="block-head">Фармако-терапевтические группы ГосРеестра МинЗдрава РФ</div>
			<div class="block-content">
				<ul class="ul-style">
					{% for g in phthgroups %}
						<li>{{ loop.index > 1 ? ', ' }}<a href="{{ path('phthgroup', {'id':g.id}) }}"
														  class="no-underline">{{ g.Name|capitalize }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	{% endif %}
{% endif %}

