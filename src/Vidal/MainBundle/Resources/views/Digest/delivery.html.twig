{% extends 'VidalMainBundle::layout.html.twig' %}


{% block title %}
	<h1>{{ title }}</h1>
{% endblock %}


{% block middle %}
	<div class="outer">
		{% if app.session.flashbag.get('test')|length %}
			<div class="emails">Было отправлено на адреса: {{ digest.emails }}</div>
		{% endif %}

		{% include 'VidalMainBundle:Digest:render.html.twig' with {'digest':digest} %}
	</div>

	{# форма #}
	<form id="delivery_form" method="POST" action="{{ path('delivery') }}">
		{{ form_widget(form.text) }}
		{{ form_widget(form) }}
	</form>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.outer {
			margin: 40px 0;
		}
		.emails {
			background:    lightgreen;
			padding:       6px 10px;
			margin-bottom: 30px;
		}
		#delivery_form select, #delivery_form input[type="text"] {
			width: 600px;
		}
		#delivery_form td.label {
			width: 200px;
		}
		#delivery_form td.widget {
			width: auto;
		}
		#form_subject {
			margin-top: 10px;
		}
	</style>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/vidalmain/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/vidalmain/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/vidalmain/javascripts/ckeditor-config.js') }}"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#delivery_form select').chosen({
				search_contains:           true,
				no_results_text:           "не найдено",
				placeholder_text_single:   "Выберите",
				placeholder_text_multiple: "Выберите"
			});
		});
	</script>
{% endblock %}