{% extends 'VidalDrugBundle::vidal_layout.html.twig' %}


{% block title %}
	<h1>{{ kfu.Name|raw }}</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('kfu') }}" title="Клинико-фармакологические указатели">КФУ</a>
	</div>
{% endblock %}


{% block vidal %}
	<div class="anons">Клинико-фармакологический указатель</div>

	{% if parent %}
		<div class="block">
			<span class="block-head">Входит в группу: </span>
			<a href="{{ path('kfu_item', {'code':parent.Code}) }}" class="no-underline">
				{{ parent.Name|raw }}
			</a>
		</div>
	{% endif %}

	{% if children is not empty %}
		<div class="block">
			<div class="block-head">Включает группы</div>
			<div class="block-content">
				<table class="products-table">
					<tr class="products-table-header">
						<td>Код</td>
						<td>Название</td>
					</tr>
					{% for child in children %}
						<tr>
							<td>
								{{ child.Code }}
							</td>
							<td>
								<a href="{{ path('kfu_item', {'code':child.Code}) }}" class="no-underline">
									{{ child.Name|raw }}
								</a>
							</td>
						</tr>
					{% endfor %}
				</table>
			</div>
		</div>
	{% endif %}

	{% if products is defined and products is not empty %}
		<div class="block">
			<div class="block-head">Препараты группы</div>
			{% include 'VidalDrugBundle:Vidal:render_products.html.twig' %}
		</div>
	{% elseif children is empty %}
		<div class="no-results block">
			Не найдено препаратов
		</div>
	{% endif %}

{% endblock %}