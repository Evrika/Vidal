{% extends 'VidalDrugBundle::vidal_layout.html.twig' %}


{% block title %}
	<h1>{{ infoPage.RusName|upper|raw }}
		<span>(представительство{% if infoPage.Country is not empty and infoPage.Country != 'Unknown' %},
			{{ infoPage.Country }}{% endif %})</span>
	</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('inf') }}">Представительства фирм</a>
		<i></i>
		<span>{{ infoPage.RusName|upper|raw }}</span>
	</div>
{% endblock %}


{% block vidal %}
	{# логотип компании и инфо #}
	<table class="infopage">
		<tr>
			{% if picture %}
				{% set path = '/upload/companies/' ~ picture.path %}
				{% if is_file(path) %}
					<td class="infopage-logo">
						<img src="{{ path }}"/>
					</td>
				{% endif %}
			{% endif %}
			<td class="infopage-about">
				{{ infoPage.RusAddress|raw }}
			</td>
		</tr>
	</table>

	{# препараты #}
	{% if products is defined and products is not empty %}
		<div class="block">
			<div class="block-head">Лекарственные препараты</div>
			{% include 'VidalDrugBundle:Vidal:render_products.html.twig' %}
		</div>
	{% endif %}
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.infopage td {
			vertical-align: top;
		}
		.infopage-logo img {
			max-width:     200px;
			max-height:    200px;
			padding-right: 40px;
		}
		.infopage-about p {
			margin:    7px 0;
			font-size: 15px;
		}
	</style>
{% endblock %}