{% extends 'VidalDrugBundle::vidal_layout.html.twig' %}


{% block title %}
	<h1>{{ description }}</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('kfu') }}" title="Клинико-фармакологические указатели">КФУ</a>
		<i></i>
		<span>{{ description }}</span>
	</div>
{% endblock %}


{% block vidal %}
	<div class="anons anons-head">
		<span>Клинико-фармакологическая группа</span>
	</div>

	{% if products is not empty %}
		<div class="block">
			<div class="block-head">Препараты группы</div>
			{% include 'VidalDrugBundle:Vidal:render_products.html.twig' %}
		</div>
	{% else %}
		<div class="no-results">
			Не найдено препаратов
			<span>{{ description }}</span>
		</div>
	{% endif %}

{% endblock %}