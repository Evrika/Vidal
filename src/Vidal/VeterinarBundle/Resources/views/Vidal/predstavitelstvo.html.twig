{% extends 'VidalVeterinarBundle::vidal_layout.html.twig' %}


{% block title %}
	<h1>ПРЕДСТАВИТЕЛЬСТВА ФИРМ</h1>
{% endblock %}


{% block nav %}
	<div class="breadcrumbs">
		<a href="{{ path('index') }}">Видаль</a>
		<i></i>
		<a href="{{ path('veterinar') }}">Видаль-Ветеринар</a>
		<i></i>
		<span>Представительства фирм</span>
	</div>
{% endblock %}


{% block vidal %}
	{% if menu_veterinar is defined %}
		{% include 'VidalVeterinarBundle:Vidal:veterinar_menu.html.twig' %}
	{% endif %}

	{% if infoPages is not empty %}
		<table class="infopage products-table">
			<tr class="products-table-header">
				<td>Название</td>
				<td class="right">Страна</td>
			</tr>
			{% for i in infoPages %}
				<tr>
					<td>
						<a href="{{ path('v_inf', {'Name':i.Name}) }}">{{ i.RusName|raw }}</a>
					</td>
					<td class="right">{{ i.Country }}</td>
				</tr>
			{% endfor %}
		</table>
	{% endif %}
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.infopage a {
			text-decoration: none;
		}
		.infopage a:hover {
			text-decoration: underline;
		}
	</style>
{% endblock %}