<form id="veterinar_form" method="GET" action="{{ path('veterinar') }}">

	<div class="veterinar-search">
		<select id="veterinar_type" name="t">
			<option value="p"{{ t == 'p' ? ' selected="selected"' }}>Препараты</option>
			<option value="c"{{ t == 'c' ? ' selected="selected"' }}>Производители</option>
			<option value="r"{{ t == 'r' ? ' selected="selected"' }}>Представительства</option>
		</select>

		<input id="veterinar_input" type="text" name="q" placeholder="Введите слово для поиска..."
			   value="{{ q is defined and q is not empty ? q }}" />
		<input id="veterinar_submit" type="submit" value="Найти" class="btn-red">
	</div>

	<div id="veterinar_letters">
		<input type="hidden" name="p" id="letters_page" value="{{ p }}"/>
		<input type="submit" value="А" name="l" class="letter{{ l == 'А' ? ' active' }}"/>
		<input type="submit" value="Б" name="l" class="letter{{ l == 'Б' ? ' active' }}"/>
		<input type="submit" value="В" name="l" class="letter{{ l == 'В' ? ' active' }}"/>
